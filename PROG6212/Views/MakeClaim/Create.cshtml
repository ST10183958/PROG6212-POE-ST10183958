@model PROG6212.Models.Claim

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h1>Make claim</h1>
    <form asp-action="Create" asp-controller="Product" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="LectureName" class="form-label">lecture Name</label>
            <input asp-for="LectureName" class="form-control" placeholder="Enter name" />
            <span asp-validation-for="LectureName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="LectureSurname" class="form-label">lecture surname</label>
            <input asp-for="LectureSurname" class="form-control" placeholder="Enter surname" />
            <span asp-validation-for="LectureSurname" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="SubjectName" class="form-label">Subject Name</label>
            <input asp-for="SubjectName" class="form-control" placeholder="Enter Subject Name" />
            <span asp-validation-for="SubjectName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="LecturerEmail" class="form-label">Email</label>
            <input asp-for="LecturerEmail" class="form-control" placeholder="Enter email" />
            <span asp-validation-for="LecturerEmail" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="SubjectCode" class="form-label">Subject Code</label>
            <input asp-for="SubjectCode" class="form-control" placeholder="Enter subject code" />
            <span asp-validation-for="SubjectCode" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="SubjectCode" class="form-label">Subject Code</label>
            <input asp-for="SubjectCode" class="form-control" placeholder="Enter subject code" />
            <span asp-validation-for="SubjectCode" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="HoursWorked" class="form-label">Hours Worked</label>
            <input asp-for="HoursWorked" type="number" class="form-control" min="0" max="24" step="0.25" placeholder="e.g. 8.5" />
            <span asp-validation-for="HoursWorked" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Message" class="form-label">Message</label>
            <textarea asp-for="Message" class="form-control" rows="4" placeholder="Type your message here..."></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-4">Submit Claim</button>
    </form>
</div>